        vertical-align middle
        margin 0 auto 0.8em auto
        img
          width 100%
          height 100%
      &-desc
        margin 0
        width 100%
        &-span
          min-height 150px
    &-col-1
      margin-left 8.333%
    &-col-quest
      margin-left 8.333%
      margin-top 3em

    &-quest
      &-cont
        margin 0

    &-row-btn
      margin-top 40px

