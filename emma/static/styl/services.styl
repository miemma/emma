.services-detail
  background-color $light_gray
  overflow-x hidden
  overflow-y auto

  &-col-serv
    &:first-child
      margin-right 25px
    &:last-child
      margin-left 25px
  &-btn
    font-size 21px
    display: block;
    margin 4em auto
    padding 0.7rem
    width 80%
  &-title
    background-color $light_gray
    font-family "Avenir LT Std Heavy"
    font-size 37px
    text-align center
    color $dark_gray
    padding 1.5em 0 1.7em 0
    margin-top $header_height

  &-cont
    &-note
      font-family "Avenir LT Std Roman"
      font-size 15px
      color $gray
      text-align left
      margin-top 1em
      margin-left 13px
      font-style italic

    &-img
      height auto
      width 100%
      img
        width 100%
        height 100%
    &-title
      min-height 90px
      display flex
      align-items center
      background-color white
      border-bottom 3px solid $orange
      font-weight bold
      &-text
        font-family "Avenir LT Std Roman"
        font-size 22px
        width 40%
        margin-left 1em
        text-align left
        padding 0.3em 0 0.3em 0.5em
        line-height 25px
      .text-sp
        width 55%

      &-price
        font-family "Avenir LT Std Roman"
        font-size 22px
        color $purple
        margin-left: auto;
        margin-right 1em
    &-desc
      font-family "Avenir LT Std Roman"
      font-size 19px
      text-align justify
      color $dark_gray
      padding: 1.5em 0
      min-height 218px

    &-list
      list-style none
      text-align left
      vertical-align top
      margin-left 2em

      &-item
        padding 0.3rem
        vertical-align middle
        min-height 50px

        &-img
          display inline-block
          width 24px
          height auto
          vertical-align bottom
          margin-right 10px

          img
            width 100%
            height 100%
            margin-top -20px

        span
          display inline-block
          font-size 19px
          font-family "Avenir LT Std Roman"
          color $gray
          width 80%
          vertical-align middle

.nowrap
  white-space nowrap
