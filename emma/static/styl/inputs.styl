input[type=number]::-webkit-outer-spin-button,
input[type=number]::-webkit-inner-spin-button
  -webkit-appearance none
  margin 0

input[type=number]
  -moz-appearance textfield

input[type=text]:disabled
  color white

.emma
  &-btn-light,
  &-btn-dark
    color white
    text-decoration none
    outline none
    border-radius 5px
    text-align center
    border none
    cursor pointer
    font-family "Avenir LT Std Roman"
    padding 8px 21px
    
    &.large
      padding 8px 40px
    
  &-btn-light
    background-color $yellow

  &-btn-dark
    background-color $orange

    &:hover
    &:active
    &:focus
      color white
      text-decoration none
      outline none

  &-input
    border-radius 5px
    background-color white
    color $gray
    outline none
    border none
    font-family "Avenir LT Std Medium"
    padding 0.7em

    &:hover
    &:active
    &:focus
      text-decoration none
      outline none

textarea.emma-input
  resize none