.login
  background-color $light_gray
  overflow-y hidden
  overflow-x hidden
  
  &-loader
    display none

  &-link
    font-family "Avenir LT Std Medium"
    color $dark_gray
    margin-top 1em
    display block
    font-size 20px

    &:hover
    &:focus
    &:active
      color $dark_gray

  &-alert
    width 100%
    margin 0.5em auto
    font-family "Avenir LT Std Heavy"

  &-btn
    font-size 21px
    display: block;
    padding 6px 21px
    margin 3em auto 6.5em auto

  &-title
    font-family "Avenir LT Std Roman"
    font-size 35px
    font-weight bold
    text-align center
    color $dark_gray
    margin 6em 0 2em 0

  &-form
    &-input
      font-size 19px
      padding 0.7em
      width 100%
      margin 0.4em auto
