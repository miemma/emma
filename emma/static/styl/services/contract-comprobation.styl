.contract-comprobation
  background-color #f3f3f4
  overflow-x hidden
  overflow-y auto
  &-row-content
    margin-top 70px
  &-row-title
    margin-top 170px

  &-row-item
    margin 0.3em 0

  &-row-item-title
    margin 50px 0 0.6em 0

  &-content-title
    color $dark_gray
    font-size 20px
    font-family 'Avenir LT Std Medium'
    padding-bottom 1em
    margin-left 20px

  &-title
    color $dark_gray
    font-size 36px
    font-family 'Avenir LT Std Medium'
    padding-bottom 1em
    border-bottom 2px solid gray

  &-label
    margin-left 20px
    font-size 18px
    color $dark_gray
    font-family 'Avenir LT Std Medium'

  &-content
    font-size 16px
    color $gray
    font-family 'Avenir LT Std Medium'