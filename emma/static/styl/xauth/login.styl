.login
  background-color $light_gray
  overflow-y hidden
  overflow-x hidden

  &-loader
    display none

  &-link
    font-family "Avenir LT Std Medium"
    color $dark_gray
    margin-top 1em
    display block
    font-size 18px

    &:hover
    &:focus
    &:active
      color $dark_gray

  &-link-2
    font-family "Avenir LT Std Medium"
    color $dark_gray
    margin-top 0.4em
    display block
    font-size 18px

    &:hover
    &:focus
    &:active
      color $dark_gray

  &-alert
    width 100%
    margin 0.5em auto
    font-family "Avenir LT Std Heavy"

  &-btn
    font-size 21px
    display: block;
    padding 6px 21px
    margin 3em auto 6.5em auto

  &-title
    font-family "Avenir LT Std Roman"
    font-size 35px
    font-weight bold
    text-align center
    color $dark_gray
    margin 6em 0 2em 0

  &-form
    &-input
      font-size 19px
      padding 0.7em
      width 100%
      margin 0.4em auto


.show-in-mobile
  display none

.login-form.show-in-mobile
  margin-bottom 150px
  margin-top -60px

  h2
    font-family "Avenir LT Std Roman"
    font-size 26px
    font-weight bold
    text-align center
    color $dark_gray

  p
    font-family "Avenir LT Std Roman"
    font-size 22px
    margin-bottom 20px
    margin-top 10px

@media screen and (max-width: 1110px)
  .login-title
    margin-top 4em

@media screen and (max-width: 1024px)
  .hide-in-mobile
    display none

  .show-in-mobile
    display block

@media screen and (max-width: 767px)
  .login-title
    font-size 27px

  .login-form.show-in-mobile
    margin-bottom 60px

  .login-form.show-in-mobile h2
    font-size 21px
    margin-top 6px

  .login-form.show-in-mobile p
    font-size 17.5px
    margin-top 20px

  .login-link,
  .login-link-2
    font-size 15px